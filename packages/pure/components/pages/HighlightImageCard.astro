---
import HighlightText from "./HighlightText.astro";

interface Props {
  image: string;
  highlights: string[];
  color?: string;
}

const { image, highlights, color = "#FF3A83" } = Astro.props;
---

<div class="w-full  grid md:grid-cols-[2fr_1fr] gap-6 items-start ">

  <!-- COLUMNA IZQUIERDA -->
  <div class="flex flex-col ">
    {highlights.map(text => (
      <HighlightText text={text} color={color} />
    ))}
  </div>

  <!-- COLUMNA DERECHA (IMAGEN MÃS CHICA Y SIN ESPACIO EXCESIVO) -->
  <div class="flex justify-end">
    <img
      src={image}
      class="rounded-2xl my-4 max-w-[280px] object-contain opacity-95"
      loading="lazy"
    />
  </div>

</div>
