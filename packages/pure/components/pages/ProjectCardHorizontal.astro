---
// ProjectCardHorizontal.astro
import { Image } from "astro:assets"
import type { ImageMetadata } from "astro"
import { cn } from "astro-pure/utils"
import SkillBadges from "./SkillBadges.astro";

const {
  imagePath,
  heading,
  subheading,
  description,
  skills = [],
  hrefCode,
  hrefBlog,
  altText,
  class: className
} = Astro.props

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/projects/*.{jpeg,jpg,png,gif,avif,webp}"
)

if (!images[imagePath]) {
  throw new Error(`"${imagePath}" no existe en /src/assets/projects/`)
}
---

<div
  class={cn(
    `
      w-full flex flex-col md:flex-row overflow-hidden rounded-2xl
      backdrop-blur-md transition-colors shadow-lg

      /* Light mode */
      bg-white/60 text-zinc-700 shadow-black/5

      /* Dark mode */
      dark:bg-zinc-900/40 dark:text-zinc-200 dark:shadow-black/30 dark:border-white/10

      hover:shadow-xl hover:shadow-black/10 dark:hover:shadow-black/40
    `,
    className
  )}
>

  <!-- Imagen grande a la izquierda -->
  <div class="relative w-full md:w-1/2 overflow-hidden">

    <!-- Imagen -->
    <Image
      src={images[imagePath]()}
      alt={altText ?? heading}
      class="w-full h-auto object-contain"
      loading="lazy"
    />

    <!-- Contenedor de botones -->
    <div
      class="
        absolute bottom-3 right-3
        flex gap-2
        backdrop-blur-md
        bg-white/70 dark:bg-black/60
        p-2 rounded-xl shadow-xl shadow-black/30
      "
    >
      {hrefCode && (
        <a
          href={hrefCode}
          target="_blank"
          class="
            inline-flex items-center gap-1 px-3 py-1.5
            text-xs font-semibold rounded-lg
            bg-zinc-900/90 text-white shadow-md shadow-black/30
            hover:bg-zinc-900 hover:shadow-black/40
            transition-all dark:bg-zinc-800/90 dark:hover:bg-zinc-700
          "
        >
          Código ↗
        </a>
      )}

      {hrefBlog && (
        <a
          href={hrefBlog}
          data-astro-transition
          class="
            inline-flex items-center gap-1 px-3 py-1.5
            text-xs font-semibold rounded-lg
            bg-white/90 text-zinc-900 shadow-md shadow-black/10
            hover:bg-white transition-all
            dark:bg-zinc-700/90 dark:text-white dark:hover:bg-zinc-600
          "
        >
          Blog ↗
        </a>
      )}
    </div>

  </div>

  <!-- Contenido a la derecha -->
  <div class="flex flex-col justify-between p-6 gap-4 w-full md:w-1/2">
    <div class="flex flex-col gap-2">
      <h2 class="text-2xl font-semibold">{heading}</h2>
      <SkillBadges skills={skills} />
      <p class="text-primary font-medium">{subheading}</p>
      <p class="text-muted-foreground leading-relaxed">
        {description}
      </p>
    </div>
  </div>

</div>
