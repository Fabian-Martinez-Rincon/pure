---
import { render, type CollectionEntry } from 'astro:content'
import { getBlogCollection, sortMDByDate } from 'astro-pure/server'
import PostLayout from '@/layouts/BlogPost.astro'

export const prerender = true

export async function getStaticPaths() {
  const posts = sortMDByDate(await getBlogCollection('blogs_cristianos'))
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post, posts }
  }))
}

type Props = {
  post: CollectionEntry<'blogs_cristianos'>
  posts: CollectionEntry<'blogs_cristianos'>[]
}

const { post, posts } = Astro.props
const { Content, headings, remarkPluginFrontmatter } = await render(post)
---

<PostLayout basePath="/blogs_cristianos" {post} {posts} {headings} {remarkPluginFrontmatter}>
  <Content />
</PostLayout>

