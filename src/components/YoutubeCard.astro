---
interface Props {
  title: string
  description: string
  id: string
  index?: number
}

const { title, description, id, index = 0 } = Astro.props

// Alternancia izquierda/derecha
const textCol = index % 2 === 0 ? "order-1 md:order-1" : "order-2 md:order-2"
const videoCol = index % 2 === 0 ? "order-2 md:order-2" : "order-1 md:order-1"
---

<div class="grid gap-12 md:grid-cols-2 items-center my-16">

  <!-- TEXTO -->
  <div class={`${textCol} flex flex-col gap-4 px-4`}>
    <h2 class="text-3xl font-bold text-yellow-500">
      {title}
    </h2>

    <p class="text-lg text-custom-text opacity-90 leading-relaxed">
      {description}
    </p>
  </div>

  <!-- VIDEO -->
  <div class={`${videoCol} w-full`}>
    <lite-youtube
      class="relative w-full rounded-xl overflow-hidden shadow-lg aspect-video transition-transform duration-300 hover:scale-[1.02]"
      videoid={id}
      params="controls=1">
    </lite-youtube>
  </div>

</div>

<script>
  import "@justinribeiro/lite-youtube";
</script>
