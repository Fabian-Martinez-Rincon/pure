---
import { cn } from 'astro-pure/utils'

const { class: className, title } = Astro.props
---

<section class={cn('flex flex-col items-center gap-y-5 md:gap-y-0', className)}>
  <div class="w-full flex flex-col items-center">
    
    <h2 class="text-2xl font-semibold mb-8 relative inline-block text-center">
      {title}

      <!-- LÃ­nea que cubre TODO el texto -->
      <span class="absolute left-0 -bottom-1 h-[2px] w-full bg-[#EBBFA7]"></span>
    </h2>

    <div class="flex flex-col gap-y-3 w-full md:w-auto">
      <slot />
    </div>

  </div>
</section>
